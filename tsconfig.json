{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["ES6"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@entities/*": ["./src/entities/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
